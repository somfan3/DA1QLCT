<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.poly.quanlychitieu.fragment.BieuDoChiFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/z"
            android:layout_above="@id/chart_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="Biểu đồ thống kê chi tiêu năm "
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/z"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/spn_bdchinam"/>

        <com.anychart.AnyChartView
            android:layout_below="@id/spn_bdchinam"
            android:id="@+id/chart_chi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

</FrameLayout>